<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TokoPaerbe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.TokoPaerbe" parent="Base.Theme.TokoPaerbe" />

    <style name="Appbartitle" parent="Theme.Material3.Light">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ShapeAppearanceOverlay" parent="Theme.Material3.Light">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="backgroundTint">@color/color_state_button</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="BottomSectionStyle" parent="Widget.Material3.AppBarLayout">
        <item name="background">@android:color/background_light</item>
    </style>

</resources>