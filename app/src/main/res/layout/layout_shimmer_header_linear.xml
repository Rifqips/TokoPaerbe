<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_item"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:background="@drawable/rounded_background_shimmer"
        android:layout_marginVertical="15dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_change_layout_grid"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:background="@drawable/rounded_background_shimmer"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/tv_title_item"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_item"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_shimmer_outlined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/rounded_background_shimmer_outlined">

                <ImageView
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/rounded_background_shimmer"/>

                <LinearLayout
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_background_shimmer_outlined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_item">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/rounded_background_shimmer_outlined">

                <ImageView
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/rounded_background_shimmer"/>

                <LinearLayout
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="16dp"
                        android:background="@drawable/rounded_background_shimmer"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="8dp"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>